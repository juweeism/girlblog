---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={"juwee | " + title} description={description} />
	</head>

	<body class="flex flex-col gap-3 max-w-[700px] mx-auto font-mono px-5 py-6">
		<main class="">
            <a href="/">
            <pre class="font-mono leading-none text-[50%]">
       _                         _      
      (_)_  ___      _____  ___ ( )_____
     / / / / / | /| / / _ \/ _ \|// ___/
    / / /_/ /| |/ |/ /  __/  __/ (__  ) 
 __/ /\__,_/ |__/____\________/ /____/  
/______ _(_)____/ / /_  / /___  ____ _  
  / __ `/ / ___/ / __ \/ / __ \/ __ `/  
 / /_/ / / /  / / /_/ / / /_/ / /_/ /   
 \__, /_/_/  /_/_.___/_/\____/\__, /    
/____/                       /____/     
            </pre>
            </a>
		</main>
        <div>
			<article class="mt-12">
				<div class="prose ">
					<div class="overflow-hidden">
						<h1 class="text-xl md:text-3xl my-1 md:text-3xl font-bold">{title}</h1>
						<div>
							<FormattedDate date={pubDate} />
						</div>
					</div>
                    <div class="my-3">
					    <slot />
                    </div>
				</div>
			</article>
        </div>
        <div id="gradient"></div>
        <div id="gradient-bottom"></div>
	</body>
</html>

<style>
    #gradient {
        background: linear-gradient(#3333ff, #3333ff66, #3333ff00);
    }

    #gradient-bottom {
        background: linear-gradient(#3333ff00, #3333ff33, #3333ffcc);
    }
</style>
