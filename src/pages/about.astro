---
import BaseHead from '../components/BaseHead.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<html>
	<head>
		<BaseHead title={"about juwee | " + SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
    <body>
        <div class="max-w-[600px] mx-auto p-3 mt-24 w-full h-full overflow-x-hidden">
            <a href="/">â†œ TAKE ME HOME</a>
            <div class="w-max overflow-hidden text-xs tracking-widest">---------------------------------------------------------------------------------------------------------</div>
            <div class="my-12">
                <div class="max-w-[300px] my-6">
                    <img src="https://i.pinimg.com/736x/25/06/f6/2506f68de5ef4da500419c10b480fe97.jpg" alt="snoopy on a horse">
                </div>
